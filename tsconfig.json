{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "newLine": "crlf",
    "types": ["node"]
  },
  "include": ["src/**.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
